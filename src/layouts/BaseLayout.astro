---
import "../styles/global.css";
import "@fontsource/figtree/400.css";
import "@fontsource/figtree/500.css";
import "@fontsource/figtree/600.css";
import "@fontsource/figtree/700.css";

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "External Secrets Inc. - Winding Down Operations",
  description = "External Secrets Inc. is winding down operations. Our last day of full operations will be November 28, 2025."
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    {/* Preload critical font to prevent FOUT */}
    <link
      rel="preload"
      href={`${base}/fonts/figtree-400.woff2`}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
  </head>
  <!-- prevent FOUT -->
  <body class="font-['Figtree','Adjusted Arial Fallback',system-ui,-apple-system,BlinkMacSystemFont,'Segoe UI',Arial,sans-serif]">
    <slot />
  </body>
</html>

