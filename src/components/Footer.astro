---
import { Icon } from 'astro-icon/components';

const base = import.meta.env.BASE_URL;
---

<footer class="mt-20 pt-12">
  <div
    class="mb-12 h-px w-full bg-linear-to-r from-transparent via-primary-400 to-transparent opacity-50"
  >
  </div>
  <div class="flex flex-col md:flex-row items-center justify-center gap-6 text-primary-900">
    <a href={`${site}/terms/`} class="font-medium">
      Terms
    </a>
    <span class="hidden md:block">•</span>
    <a href={`${site}/license/`} class="font-medium">
      License
    </a>
    <span class="hidden md:block">•</span>
    <a
      href="https://www.linkedin.com/company/external-secrets-inc"
      target="_blank"
      rel="noopener noreferrer"
      class="font-medium inline-flex items-center gap-2"
    >
      <Icon name="lucide:linkedin" class="w-4 h-4" />
      LinkedIn
    </a>
  </div>
</footer>

